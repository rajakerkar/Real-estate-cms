<div class="card h-100 shadow-sm hover-card">
  <div class="position-relative">
    <img src="<%= room.images[0].path %>" class="card-img-top" alt="<%= room.title %>" style="height: 220px; object-fit: cover;">
    <div class="position-absolute top-0 start-0 bg-primary text-white px-2 py-1 m-2 rounded-pill"><%= room.category %></div>
    <% if (room.status === 'sold') { %>
      <div class="position-absolute top-0 end-0 bg-danger text-white px-2 py-1 m-2 rounded-pill">Sold Out</div>
    <% } %>
    <% if (room.rentalStatus === 'for-rent') { %>
      <div class="position-absolute bottom-0 end-0 bg-success text-white px-2 py-1 m-2 rounded-pill">
        For Rent <% if (room.monthlyRent > 0) { %>- ₹<%= room.monthlyRent.toLocaleString('en-IN') %>/mo<% } %>
      </div>
    <% } %>
  </div>
  <div class="card-body">
    <h5 class="card-title text-truncate"><%= room.title %></h5>
    <div class="d-flex justify-content-between align-items-center mb-2">
      <span class="badge bg-light text-dark"><i class="fas fa-map-marker-alt text-primary"></i> <%= room.location %></span>
      <span class="badge bg-light text-dark"><i class="fas fa-ruler-combined text-primary"></i> <%= room.size %></span>
    </div>
    <% if (room.company) { %>
      <p class="card-text small text-muted mb-2"><i class="fas fa-building text-primary"></i> Listed by: <strong><%= room.company.name %></strong></p>
    <% } %>
    <p class="card-text mb-2">
      <span class="h5 text-primary">₹<%= room.price.toLocaleString('en-IN') %></span>
    </p>
    <p class="card-text small text-muted mb-3" style="height: 60px; overflow: hidden;"><%= room.description.substring(0, 100) %>...</p>
    <div class="d-grid">
      <a href="/room/<%= room._id %>" class="btn btn-outline-primary">View Details <i class="fas fa-arrow-right ms-1"></i></a>
    </div>
  </div>
  <div class="card-footer bg-white border-top-0 text-muted">
    <small><i class="far fa-calendar-alt text-primary me-1"></i> Posted: <%= new Date(room.createdAt).toLocaleDateString() %></small>
  </div>
</div>
