<%- include('./partials/header') %>

<!-- Hero Section -->
<div class="jumbotron bg-primary text-white p-5 rounded">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1 class="display-4 fw-bold">Find Your Dream Property</h1>
        <p class="lead">Discover premium properties for sale and rent across India.</p>
        <div class="mt-4">
          <a href="/properties" class="btn btn-light btn-lg me-2">
            <i class="fas fa-search"></i> Browse All Properties
          </a>
          <a href="/company/register" class="btn btn-outline-light btn-lg">
            <i class="fas fa-building"></i> List Your Property
          </a>
        </div>
      </div>
      <div class="col-lg-6 d-none d-lg-block">
        <img src="/images/hero-image.jpg" alt="Luxury Property" class="img-fluid rounded shadow" onerror="this.src='/images/placeholder.jpg'">
      </div>
    </div>
  </div>
</div>

<!-- Stats Section -->
<div class="bg-light py-4 my-5 rounded">
  <div class="container">
    <div class="row text-center">
      <div class="col-md-4 mb-3 mb-md-0">
        <div class="d-flex align-items-center justify-content-center">
          <i class="fas fa-home fa-3x text-primary me-3"></i>
          <div class="text-start">
            <h3 class="mb-0"><%= totalRoomCount %></h3>
            <p class="text-muted mb-0">Properties Available</p>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3 mb-md-0">
        <div class="d-flex align-items-center justify-content-center">
          <i class="fas fa-map-marker-alt fa-3x text-primary me-3"></i>
          <div class="text-start">
            <h3 class="mb-0"><%= categories.length %></h3>
            <p class="text-muted mb-0">Property Categories</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="d-flex align-items-center justify-content-center">
          <i class="fas fa-users fa-3x text-primary me-3"></i>
          <div class="text-start">
            <h3 class="mb-0">100+</h3>
            <p class="text-muted mb-0">Happy Customers</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Featured Properties Section -->
<div class="my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Featured Properties</h2>
    <a href="/properties" class="btn btn-outline-primary">
      View All <span class="badge bg-primary"><%= totalRoomCount %></span> <i class="fas fa-arrow-right ms-1"></i>
    </a>
  </div>

  <% if (featuredRooms && featuredRooms.length > 0) { %>
    <div class="row">
      <% featuredRooms.forEach(room => { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <%- include('./partials/room-card', { room }) %>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="alert alert-info">
      <i class="fas fa-info-circle"></i> No properties available at the moment. Please check back later.
    </div>
  <% } %>
</div>

<!-- Categories Section -->
<div class="my-5">
  <h2 class="mb-4">Browse by Category</h2>
  <div class="row">
    <% categories.forEach(category => { %>
      <div class="col-md-3 col-6 mb-4">
        <a href="/properties?category=<%= category %>" class="text-decoration-none">
          <div class="card h-100 border-0 shadow-sm hover-card">
            <div class="card-body text-center">
              <i class="fas fa-home fa-3x text-primary mb-3"></i>
              <h5 class="card-title"><%= category %></h5>
              <p class="card-text text-muted">Browse <%= category %> properties</p>
            </div>
          </div>
        </a>
      </div>
    <% }); %>
  </div>
</div>

<!-- Call to Action -->
<div class="bg-primary text-white p-5 rounded my-5">
  <div class="row align-items-center">
    <div class="col-lg-8">
      <h2>Ready to find your dream property?</h2>
      <p class="lead mb-lg-0">Browse our complete collection of premium properties available for purchase and rent.</p>
    </div>
    <div class="col-lg-4 text-lg-end">
      <a href="/properties" class="btn btn-light btn-lg">
        <i class="fas fa-search me-2"></i> Explore All Properties
      </a>
    </div>
  </div>
</div>

<style>
  .hover-card {
    transition: transform 0.3s ease;
  }
  .hover-card:hover {
    transform: translateY(-5px);
  }
</style>

<%- include('./partials/footer') %>
